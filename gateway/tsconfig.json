{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"moduleResolution": "nodenext"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
